.page-index {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  min-height: 100vh;
  background: #fff;
}

.module-authorize {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.appinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.appinfo-logo {
  border-radius: 80px;
  width: 80px;
  height: 80px;
  background-size: contain;
}

.appinfo-name {
  margin-top: 8px;
  font-size: 16px;
  font-weight: 500;
  color: #888;
}

.button-authorize {
  margin-top: 16px;
  line-height: 40px;
}