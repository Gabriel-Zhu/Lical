.home-button-post {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 16px;
  border: 1px solid #222;
  border-radius: 24px;
  padding: 0;
  padding-bottom: 2px;
  width: 24px;
  height: 24px;
  line-height: 24px;
  font-size: 18px;
  font-weight:lighter;
  color: #000;
  background: none;
  box-sizing: border-box;
}

.home-activities {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

.home-module-footer {
  margin-top: 32px;
  margin-bottom: 32px;
  padding-top: 8px;
  font-size: 14px;
  text-align: center;
  color: rgba(0, 0, 0, .1);
}

.home-buttons {
  position: absolute;
  top: 80px;
  right: 16px;
}

.home-button {
  margin-top: 16px;
  font-size: 14px;
}

.page-home.theme-dark .home-module-footer {
  color: rgba(255, 255, 255, .1);
}

.page-home.theme-dark .home-button-post {
  border-color: #efefef;
  color: #efefef;
}
